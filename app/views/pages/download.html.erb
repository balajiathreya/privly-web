              <%= image_tag "firefox_logo_150.png", :alt => "Firefox Logo", :style=>"position:absolute;right:0;top:0;opacity:0.4;filter:alpha(opacity=40);" %>
              <%= image_tag "icons/icon_96.png", :alt => "Privly Icon", :style=>"position:absolute;right:27px;top:20px;" %>
          </div>         
          <div name="extension" style="text-align: center">
              <h1 id="firefox">Firefox Extension</h1>
              <div id="firefox_message" style="display:none;background:none">
